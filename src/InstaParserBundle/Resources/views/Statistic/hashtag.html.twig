{% extends 'InstaParserBundle:Common:base.html.twig' %}
{% block content %}
    <div class="bloggers">
        <table id="blogger-table" class="blogger-table">
            <tr class="table-head">
                <td>Клуб</td>
                <td>Подразделение</td>
                <td>Фамилия, Имя</td>
                <td>Ссылка на аккаунт</td>
                <td>Количество подписчиков</td>
                <td>Посты по хештегу</td>
                <td>Посты по метоположению</td>
            </tr>
            {% for subscriber in subscribers %}
                <tr>
                    <td rowspan="2">{{ subscriber.location }}</td>
                    <td rowspan="2">{{ subscriber.work }}</td>
                    <td rowspan="2">{{ subscriber.name }}</td>
                    <td rowspan="2">
                        <a href="{{ subscriber.link }}" target="_blank">Ссылка</a>
                    </td>
                    <td rowspan="2">{{ subscriber.subscribers }}</td>
                    <td>{{ subscriber.hashtagPosts|length }}</td>
                    <td>{{ subscriber.locationPosts|length }}</td>
                </tr>
                <tr>
                    <td>
                        <table class="blogger-table">
                            {% for post in subscriber.hashtagPosts %}
                                <tr>
                                    <td>
                                        <a href="https://www.instagram.com/p/{{ post.link }}" target="_blank">{{ post.hashtag }}</a> - https://www.instagram.com/p/{{ post.link }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </td>
                    <td>
                        <table class="blogger-table">
                            {% for post in subscriber.locationPosts %}
                                <tr>
                                    <td>
                                        <a href="https://www.instagram.com/p/{{ post.link }}" target="_blank">{{ post.location.name }}</a> - https://www.instagram.com/p/{{ post.link }}
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    </td>
                </tr>
            {% endfor %}
        </table>

        <table id="blogger-table" class="blogger-table">
            <tr class="table-head">
                <td>Клуб</td>
                <td>Подразделение</td>
                <td>Фамилия, Имя</td>
                <td>Ссылка на аккаунт</td>
                <td>Количество подписчиков</td>
                <td>Посты по хештегу</td>
                <td>Посты по метоположению</td>
            </tr>
            {% for subscriber in facebookSubscribers %}
                <tr>
                    <td rowspan="2">{{ subscriber.location }}</td>
                    <td rowspan="2">{{ subscriber.work }}</td>
                    <td rowspan="2">{{ subscriber.name }}</td>
                    <td rowspan="2">
                        <a href="{{ subscriber.link }}" target="_blank">Ссылка</a>
                    </td>
                    <td rowspan="2">{{ subscriber.subscribers }}</td>
                    <td>{{ subscriber.hashtagPosts|length }}</td>
                    <td>{{ subscriber.locationPosts|length }}</td>
                </tr>
                <tr>
                    <td>
                        {% for post in subscriber.hashtagPosts %}
                            <a href="#" target="_blank">{{ post.hashtag }}</a>,
                        {% endfor %}
                    </td>
                    <td>
                        {% for post in subscriber.locationPosts %}
                            <a href="#" target="_blank">{{ post.location }}</a>,
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}